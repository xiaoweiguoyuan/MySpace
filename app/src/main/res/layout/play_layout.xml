<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:max="100"
            android:progress="20"
            android:secondaryProgress="60"
            style="@style/PlayProgressStyle"/>

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/progress"
            android:layout_marginTop="5dp"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="12sp"
            />
        <TextView
            android:id="@+id/duration_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/progress"
            android:layout_marginTop="5dp"
            android:text="01:09"
            android:textColor="@color/white"
            android:textSize="12sp"
            />
    </RelativeLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/setting_btn"
            app:layout_constraintLeft_toLeftOf="@+id/setting_txt"
            app:layout_constraintRight_toRightOf="@+id/setting_txt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/setting_txt"
            app:layout_constraintVertical_chainStyle="spread"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/setting_ic"
            />
        <TextView
            android:id="@+id/setting_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/setting_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="收听设置"
            android:textColor="@color/white"
            android:textSize="12sp"
            />

        <ImageView
            android:id="@+id/pre_btn"
            android:layout_width="26dp"
            android:layout_height="26dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/play_btn"
            android:layout_marginRight="20dp"
            android:src="@drawable/seek_back_ic"
            />
        <ImageView
            android:id="@+id/play_btn"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:src="@drawable/pause_ic"
            />

        <ImageView
            android:id="@+id/next_btn"
            android:layout_width="26dp"
            android:layout_height="26dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/play_btn"
            android:layout_marginLeft="20dp"
            android:src="@drawable/seek_to_ic"
            />

        <ImageView
            android:id="@+id/like_btn"
            android:layout_width="26dp"
            android:layout_height="26dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/like_text"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/like_ic"
            />

        <TextView
            android:id="@+id/like_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/like_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@id/like_btn"
            app:layout_constraintLeft_toLeftOf="@id/like_btn"
            android:text="12"
            android:textSize="12sp"
            android:textColor="@color/white"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
