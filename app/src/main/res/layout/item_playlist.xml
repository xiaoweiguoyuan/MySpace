<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="top"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="horizontal">
 <androidx.constraintlayout.widget.ConstraintLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content">

     <ImageView
         android:id="@+id/cover_iv"
         android:layout_width="56dp"
         android:layout_height="56dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintLeft_toLeftOf="parent"
         android:scaleType="fitXY"
         />
     <!--内容展示区域 start-->
     <TextView
         android:id="@+id/title_tv"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintLeft_toRightOf="@+id/cover_iv"
         app:layout_constraintRight_toLeftOf="@+id/play_btn"
         app:layout_constraintHorizontal_weight="1"
         app:layout_constraintHorizontal_chainStyle="spread"
         android:layout_marginLeft="8dp"
         android:layout_marginRight="8dp"
         tools:text="人生如梦 人生如梦"
         android:singleLine="true"
         android:ellipsize="end"
         android:textSize="16sp"
         android:textColor="@color/color_46F8B7"
         />
     <TextView
         android:id="@+id/desc_tv"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         app:layout_constraintTop_toBottomOf="@+id/title_tv"
         android:layout_marginTop="2dp"
         app:layout_constraintLeft_toLeftOf="@+id/title_tv"
         app:layout_constraintRight_toLeftOf="@+id/play_btn"
         android:layout_marginRight="8dp"
         tools:text="车间访谈"
         android:singleLine="true"
         android:ellipsize="end"
         android:textSize="12sp"
         android:textColor="@color/white"/>
     <TextView
         android:id="@+id/time_tv"
         android:layout_width="wrap_content"
         android:layout_height="17dp"
         android:drawableLeft="@drawable/download"
         android:drawablePadding="2dp"
         android:layout_marginTop="2dp"
         app:layout_constraintTop_toBottomOf="@+id/desc_tv"
         app:layout_constraintLeft_toLeftOf="@+id/title_tv"
         android:textSize="12sp"
         android:textColor="@color/white"/>
     <!--内容展示区域 end-->

     <ImageView
         android:id="@+id/play_btn"
         android:layout_width="35dp"
         android:layout_height="35dp"
         android:src="@drawable/pause_ic"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintRight_toRightOf="parent"/>

     <com.wuba.car.myspace.view.CircularProgressView
         android:id="@+id/progress"
         android:layout_width="35dp"
         android:layout_height="35dp"
         app:backColor="@color/color_black_trans20"
         app:backWidth="1dp"
         app:progColor="@color/colorAccent"
         app:progWidth="1dp"
         app:progress="90"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintLeft_toLeftOf="@+id/play_btn"
         app:layout_constraintRight_toRightOf="@+id/play_btn"/>
 </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
